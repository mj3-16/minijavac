#!/usr/bin/env sh

# 'gradlew' (generated by Gradle) only works if working directory is
# set to project directory. We do this in a subshell in order to make
# sure that we don't mess up the caller of this 'build' script (which
# could happen if the caller sources this script)

case "$(uname -s)" in
   Darwin)
     SCRIPT_PATH=$(greadlink -f "$0")
     ;;

   *)
     SCRIPT_PATH=$(readlink -f "$0")
     ;;
esac

PROJECT_DIR=$(dirname "$SCRIPT_PATH")
(cd "$PROJECT_DIR" && exec "$PROJECT_DIR/gradlew" installDist)
exit $?
